@model Opera.ViewModels.PaginationViewModel
@{
    Layout = "_AppLayout";
}

<div class="container_12">
    <div class="push_1 grid_8">
        @foreach(var item in @Model.Questions)
        {
            <div class="main-page-item">
                <h2><a href="question/@item.QuestionId">@item.QuestionTitle.Substring(0, 1).ToUpper()@item.QuestionTitle.Substring(1, @item.QuestionTitle.Length-1)</a></h2>
                <br/>
            </div>
        }
        @if(@Model.AmmountOfPages > 0)
        {
            @for(var i = 0; i<=@Model.AmmountOfPages; i++)
            {
                @if(ViewBag.Id ==(i+1)){
                    <a>@(i+1)</a>    
                }
                else
                {
                    <a href="/page/@(i)">@(i+1)</a>
                }
            }
        }
    </div>
    <div class="push_1 grid_3">
        <div class="ask-button">
            <a href="/ask">Ask!</a>
        </div>
    </div>
</div>